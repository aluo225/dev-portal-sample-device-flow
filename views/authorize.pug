extends layout.pug

block content
	.container
		p Click the URL to authenticate using a valid username and password.
		p #[a(href=qrCode target='_blank') #{qrCode}]

	if qrCodeComplete
		.container.mt-5
			.row
				.col-md-5
					p
						strong Or scan the QR code below
					img(src=qrCodeComplete)

	.container.mt-5
		.row
			.col-md-6
				p Upon successful completion the user has authenticated and the device has been authorized. You can switch back to this tab to verify the authenticated users info.
